{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ES5",
    "module": "ES6",
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "include": ["src/**/*"],
}
